{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "arg-overflow": "error",
    "array-declarations": "error",
    "blank-lines": "error",
    "camelcase": "error",
    "comma-whitespace": "error",
    "conditionals-whitespace": "error",
    "deprecated-suicide": "error",
    "emit": "error",
    "error-reason": "off",
    "function-order": "off",
    "function-whitespace": "error",
    "imports-on-top": "error",
    "indentation": ["error", 2],
    "lbrace": "error",
    "linebreak-style": ["error", "unix"],
    "mixedcase": "warning",
    "no-constant": "error",
    "no-empty-blocks": "error",
    "no-unused-vars": "error",
    "operator-whitespace": "error",
    "pragma-on-top": "error",
    "quotes": ["error", "double"],
    "security/no-assign-params": "off",
    "security/no-inline-assembly": "off",
    "semicolon-whitespace": "error",
    "uppercase": "off",
    "value-in-payable": "error",
    "variable-declarations": "error",
    "visibility-first": "error",
    "whitespace": "error"
  }
}
