{
  "name": "@brickblock/smart-contracts",
  "version": "2.0.7",
  "description": "Smart contracts for the Brickblock platform",
  "engines": {
    "node": ">=8.7.0",
    "yarn": ">=1.3.2"
  },
  "scripts": {
    "---SECTION:BLOCKCHAIN---": "-------------------- HOW TO START A LOCAL BLOCKCHAIN --------------------",
    "start:dev:testrpc:comment": "no need for '--deterministic' see update: https://github.com/trufflesuite/truffle/releases",
    "start": "concurrently --prefix '[{name}: {time}]' -n 'yarn start:dev, seed' -c 'bgBlue.bold.white,bgGreen.bold.white' 'yarn start:dev' 'yarn migrate:dev && yarn seed'",
    "start:dev": "truffle develop",
    "---SECTION:BUILD---": "-------------------- HOW TO BUILD THE SMART CONTRACTS --------------------",
    "build:comment": "Compile smart contracts and output into the build/ dir",
    "build": "truffle compile && yarn build:inject-deployed-contracts",
    "build:inject-deployed-contracts:comment": "making the deployed chainid:address pair as configured in .env available to build/contract/Brickblock.json",
    "build:inject-deployed-contracts": "cross-env node scripts/injectDeployedContracts.js",
    "---SECTION:CLEAN---": "-------------------- HOW TO CLEAN OLD BUILD OUTPUT --------------------",
    "clean:comment": "Clean up old contracts and build files",
    "clean:contracts": "rimraf build/contracts",
    "clean:install:comment": "In case there are some dependency issues, a clean install often helps",
    "clean:install": "rimraf node_modules && yarn install",
    "---SECTION:MIGRATE---": "-------------------- HOW TO MIGRATE AND SYNC THE SMART CONTRACTS --------------------",
    "migrate:comment": "Compile smart contracts and output into the build/ dir then deploys our smart contracts to the some network",
    "migrate:dev": "truffle migrate --network dev --reset",
    "migrate:prod:local": "truffle migrate --network prod",
    "migrate:ropsten": "cross-env NODE_ENV=production truffle migrate --network ropsten",
    "migrate:ropsten:reset:comment": "migrate to a new address ",
    "migrate:ropsten:reset": "cross-env NODE_ENV=production truffle migrate --reset --network ropsten",
    "seed": "cross-env NODE_PATH=build NODE_ENV=development node scripts/seed.js",
    "seed:ropsten": "cross-env NODE_PATH=build NODE_ENV=development node scripts/seed.ropsten.js",
    "---SECTION:TEST---": "-------------------- HOW TO TEST THE SMART CONTRACTS --------------------",
    "test": "yarn run clean:contracts && truffle test test/main-tests/*",
    "test:stress-test": "truffle test test/stress-tests/*",
    "test:coverage": "( yarn solidity-coverage || true ) && open coverage/contracts/index.html",
    "coverage": "yarn test:coverage",
    "---SECTION:LINT---": "-------------------- HOW TO LINT --------------------",
    "lint": "yarn lint:sol && yarn lint:js",
    "lint:sol": "solium --dir ./contracts",
    "lint:js": "prettier migrations/* scripts/*.js tests/* --write",
    "---SECTION:VERSION---": "-------------------- HOW TO MAKE A NEW VERSION --------------------",
    "preversion": "yarn lint && yarn build",
    "---SECTION:HOUSEKEEPING---": "-------------------- GITHOOKS, HEALTHCHECK, OPEN TODOS, VULNERABILITY CHECK etc. --------------------",
    "precommit:comment": "Makes sure we don't commit bad code",
    "precommit": "lint-staged",
    "prepush": "yarn lint && yarn test"
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "yarn lint:sol",
      "git add"
    ],
    "**/*.js": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "devDependencies": {
    "bignumber.js": "^4.1.0",
    "chai": "^4.1.1",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "dotenv": "^4.0.0",
    "ethereumjs-testrpc": "^6.0.1",
    "husky": "^0.14.3",
    "left-pad": "^1.1.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "rimraf": "^2.6.2",
    "solidity-coverage": "^0.4.9",
    "solium": "^1.0.4",
    "truffle": "^4.0.1",
    "truffle-contract": "^3.0.1",
    "truffle-hdwallet-provider": "^0.0.3",
    "web3": "^0.18.4",
    "zeppelin-solidity": "1.5.0"
  },
  "dependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.17.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-compat": "^2.2.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-security": "^1.4.0"
  }
}
